{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Almeja",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#auxiliars"
		},
		{
			"include": "#reserved"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.almejalang",
				"match": "\\b(if|while|for|return|NECESITO)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.almejalang",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.almejalang",
					"match": "\\\\."
				}
			]
		},
		"auxiliars": {
			"patterns": [{
				"name": "keyword.other.almejalang",
				"match": "\\b(EL|EN|DE|A)\\b"
			}]		
		},
		"reserved":{
			"patterns": [{
				"name": "entity.name.type.almejalang",
				"match": "\\b(VOLUMEN|CONTENEDOR)\\b"
			}]
		}

	},
	"scopeName": "src"
}